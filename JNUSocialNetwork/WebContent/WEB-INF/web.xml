<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>JNUSocialNetwork</display-name>
  
  <!-- AutoLoginFilter -->
  <filter>
  	<filter-name>AutoLoginFilter</filter-name>
  	<filter-class>
  		security.AutoLoginFilter
  	</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/activity.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/activityShow.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/circle.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/community.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/communityShow.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/home.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/people.jsp
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AutoLoginFilter</filter-name>
  	<url-pattern>
  		/profile.jsp
  	</url-pattern>
  </filter-mapping>
  
  <!-- LoginCheckFilter -->
   <filter>
  	<filter-name>LoginCheckFilter</filter-name>
  	<filter-class>
  		security.LoginCheckFilter
  	</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/post/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/comment/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/user/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/event/deleteUnhandledEvent/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/community/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/chatRoom/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/application/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheckFilter</filter-name>
  	<url-pattern>
  		/app/fileUploader/*
  	</url-pattern>
  </filter-mapping> 
  
  <!-- AuthorizationCheckFilter -->
  <filter>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<filter-class>
  		security.AuthorizationCheckFilter
  	</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/post/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/comment/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/user/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/event/deleteUnhandledEvent/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/community/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/chatRoom/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/application/*
  	</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthorizationCheckFilter</filter-name>
  	<url-pattern>
  		/app/fileUploader/*
  	</url-pattern>
  </filter-mapping>
  
</web-app>